<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head'); %>
</head>
<body>
  <header>
    <%- include('../partials/header'); %>
  </header>
  <main>
    <div class="container">
        <form id="form-products">
            <div class="title">
                <label>Title:</label>
                <input id="products-title" type="text" name="title" placeholder="Nombre del producto" autocomplete="off" required />
            </div>
            <div class="price">
                <label>Price:</label>
                <input id="products-price" type="text" name="price" placeholder="Precio" autocomplete="off" required />
            </div>
            <div class="thumbnail">
                <label>Thumbnail URL:</label>
                <input id="products-thumbnail" type="text" name="thumbnail" placeholder="Link de miniatura" autocomplete="off" required />
            </div>
            <div class="add-product">
                <input type="submit" value="Add Product" />
            </div>
        </form>
    </div>
    <div class="products-container">
          <table id="rows">
          </table>
    </div>
    <div class="container">
      <form id="form-messages">
        <div class="messages-title">
          <h1>Centro de Mensajes</h1>
        </div>
        <div class="messages-email">
          <input id="messages-email" type="email" name="email" placeholder="Escribe tu email..." autocomplete="off" required />
        </div>
          <div id="messages-container" class="messages-container">
        </div>
        <div class="send-wrapper">
          <div class="messages-text">
            <input id="messages-text" type="text" name="text" placeholder="Escribe algo..." autocomplete="off" required />
          </div>
          <div class="add-product">
            <input type="submit" value="Enviar mensaje" />
          </div>
        </div>
      </form>
    </div>
  </main>
  <footer>
    <%- include('../partials/footer'); %>
  </footer>
</body>
</html>